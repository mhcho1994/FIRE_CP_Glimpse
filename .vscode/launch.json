{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (sim_modelica.py)",
      "type": "python",
      "request": "launch",

      "program": "${workspaceFolder}/src/sim/sim_modelica.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,

      "args": [
        "examples/bouncingball/bouncingball.mo",
        //"--model", "BouncingBall",
        "--start", "0.0",
        "--stop", "10.0",
        "--step", "0.01",
        "--method", "ida",
        "--simflags", "-override h0=10.0,e=0.6",
        "--workdir", "${workspaceFolder}/build/modelica_runs/bouncingball",
        "--out", "${workspaceFolder}/results/modelica_runs/bouncingball.csv",
        // "--list"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "name": "Debug (casadi_translator.py)",
      "type": "python",
      "request": "launch",

      "program": "${workspaceFolder}/src/translator/casadi_translator.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,

      "args": [
        "examples/bouncingball/bouncingball.mo",
        "--prefer-system",
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}